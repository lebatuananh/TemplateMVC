@model IntroduceConfigDto
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["formation"];
}

<div id="breacrumb">
    <div class="container">
        <ol class="breadcrumb">

            <li>
                <a href="/gioi-thieu.html">@Localizer["introduce"]</a>
            </li>
            <li class="active">@Localizer["formation"]</li>
        </ol>
    </div>
</div>
<!-- END -->
<div id="about-page" class="wow fadeInUp" data-wow-duration="1s">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="ap-box pull-left">
                    <div class="ab-img pull-left">
                        <img src="@Model.Image" class="img-responsive" alt="">
                    </div>
                    <div class="ap-box-content">
                        <h2 class="title-head">@Localizer["formation"]</h2>
                        <div class="ap-content">
                            @Html.Raw(Model.Content)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END -->
